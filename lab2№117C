#include <stdio.h>
#include <math.h>
main()
{
    int x1,y1,x2,y2,x3,y3,x4,y4;
    float S;
    printf("Введите координаты точки А\n");
    scanf("%d%d",&x1,&y1);
    printf("Введите координаты точки B\n");
    scanf("%d%d",&x2,&y2);
    printf("Введите координаты точки C\n");
    scanf("%d%d",&x3,&y3);
    printf("Введите координаты точки D\n");
    scanf("%d%d",&x4,&y4);
    S = 0.5 * fabs(x1*y2 +x2*y3 + x3*y4 + x4*y1 - x2*y1 - x3*y2 - x4*y3 - x1*y4);
    printf("%f",S);
}
